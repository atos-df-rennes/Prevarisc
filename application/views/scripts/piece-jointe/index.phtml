<script type="text/javascript">
        
	Dropzone.autoDiscover = false;
        
	$(document).ready(function() {

		$("body").append("<iframe name='hiddeniframe' id='hiddeniframe' src='about:blank' style='width:0px; height:0px' >");
		// Bouton de la pièce jointe
		$("#addPJ").button({
		
			icons: {
				primary: 'ui-icon-pin-s'
			},
			text: true
			
		}).click(function() {

			// Dialogue du formulaire
			$.ajax({
				url: "/piece-jointe/form",
				data: "id=" + $("#idLinkPJ").val() + "&type=" + $("#typePJ").val(),
				type: "post",
				success: function(result) {
					$("#formAddPJ").html(result).dialog({
						resizable: false,
						height: 500,
						width: 580,
						modal: true,
						buttons: {
							'Ajouter la pièce jointe': function() {
								
								// Envoi du formulaire dans form
								$("#formUpload").submit();
								
								// On ferme la boite de dialogue
								$(this).dialog('close'); 
								
								// On ouvre la barre de chargement
								$("<div id='load' style='text-align: center'><img src='/images/bar.gif' alt='Upload en cours' /></div>").dialog({
									resizable: false,
									height: 45,
									width: 250,
									modal: true,
									dialogClass: 'noTitleStuff'
								});
							}
						}
					});
				}
			});
		});
                
		/* GESTION DU GLISSEZ DEPOSER */
		$("#addPJQuick").click(function() {
			$('#dropzone').toggle();
		});
		// Affichage des dossiers enfants
		$(".table_liste").live("click", function() {
				var container = this;
				if( $(this).hasClass("active") ) {
					$(this).next().slideUp(400, function() {$(container).next().remove()});
					$(this).toggleClass("active");
				}
				else {
					$(container).find(".load").show();
					$.post("/piece-jointe/display-ajax-piecejointe", {parent: 25897}, function(html) {
						$(container).toggleClass("active").find(".load").hide();
						$(container).after(html).next().slideDown();
					});
				}
		});
		// Bouton de la pièce jointe signé
		$(".addPJSigne").click(function(){
			idPjParente = $(this).val();
			// Dialogue du formulaire
			$.ajax({
				url: "/piece-jointe/form-signe",
				data: "id=" + $("#idLinkPJ").val() + "&type=" + $("#typePJ").val() + "&idPj=" + idPjParente,
				type: "post",
				success: function(result) {
					$("#formSigneAddPJ").html(result).dialog({
						resizable: false,
						height: 500,
						width: 580,
						modal: true,
						buttons: {
							'Ajouter la pièce jointe signée': function() {
								// Envoi du formulaire dans formSigne
								$("#formSigneUpload").submit();

								// On ferme la boite de dialogue
								$(this).dialog('close');

								// On ouvre la barre de chargement 
								$("<div id='load' style='text-align: center'><img src='/images/bar.gif' alt='Upload en cours' /></div>").dialog({
									resizable: false,
									height: 45,
									width: 250,
									modal: true,
									dialogClass: 'noTitleStuff'
								});
							}
						}
					});
				}
			});
		});
                
		var myDropzone = new Dropzone("#dropzone", { 
			url: "/piece-jointe/add?id=" + $("#idLinkPJ").val() + "&type=" + $("#typePJ").val(),
			paramName: "fichier"
		});
		myDropzone.on("success", function(file, responseText) {
			if (responseText !== undefined) {
				$('body').append(responseText);
				if (file.previewElement !== undefined) {
					file.previewElement.remove();
				}
				$('#dropzone').removeClass("dz-started").hide();
			} else
			{
				document.location.reload();
			}
		});

		// Supp. d'une pièce jointe
		$("a.delete").live("click", function(e) {
			e.preventDefault();
			if (confirm('Etes-vous sûr de vouloir supprimer cette pièce jointe ?')){
				var a = this;
				$.ajax({
					url: a.href,
					data: "&type=<?php echo $this->type ?>",
					type: "post",
					success: function(result) {
						$(a).parent().parent().remove();
					}
				});
				return false;
			}
		});
		
        $('a[href$=png], a[href$=jpg], a[href$=jpeg]').fancybox({
            'transitionIn'	:	'elastic',
            'transitionOut'	:	'elastic',
            'speedIn'		:	600, 
            'speedOut'		:	200, 
        });
        
        $(".select").live('click',function(){
            var idAvantSplit = $(this).attr('id');
            var tabId = idAvantSplit.split('_');
            var id = tabId[1];
            var checked = $(this).attr('checked');
            $.ajax({
                url: "/dossier/fonction",
                data: "do=pjPassageCommission&idPjCommission="+id+"&idDossier="+$("#idDossier").val()+"&checked="+checked,
                type:"POST",
                beforeSend: function(){
                    
                },
                success: function(affichageResultat){
                    //alert(checked);
                    if(checked == true){
                        $(".select").each(function(){
                            $(this).attr('disabled','disabled');
                        });
                        $("#"+idAvantSplit).attr('disabled','');
                    }else{
                        $(".select").each(function(){
                            $(this).attr('disabled','');
                        });
                    }
                },
                error: function()	{

                    return false;
                }
            });
        });
        
        function disabledTest(){
            var test = 0;
            $(".select").each(function(){
                if($(this).attr('checked')){
                    test = 1;
                }
                
            });
            if(test == 1){
                $(".select").each(function(){
                    if(!$(this).attr('checked')){
                        $(this).attr('disabled','disabled');
                    }			
                });
            }
        
        }
        disabledTest();

		
	});
	
	// Si un fichier est bien uploadé, on l'ajoute à la liste
	function callback(id, ext) {

		$.ajax({
			url: "/piece-jointe/check",
			data: {
				"format": "json",
				"idpj" : id,
				"ext" : ext,
				"type" : "<?php echo $this->type ?>",
				"id" : "<?php echo $this->identifiant ?>"
			},
			type: "post",
			success: function(result) {
			
				// On détruit la fenetre de load
				//$("#load").dialog('destroy');
				$("#load").remove();
			
				if( result.exists ) {
					// Message d'info
					$("#uploadSucces").show();
					setTimeout( function() { $(".message").fadeOut(); }, 2500);
					
					// Ajout d'une ligne
					$("#tabPieceJointe tbody").prepend(result.html);
					$("#tabPieceJointeSigne tbody").prepend(result.html);
					
					// Mise à jour
					$("#listePieceJointe table").trigger("update");
					$("#listePieceJointe table").trigger("sorton", [[3,1]]);
				}
				else {
					// Message d'information
					$("#uploadError").show();
					setTimeout( function() { $(".message").fadeOut(); }, 2500);
				}
				
				$("#listePieceJointe").show();
				$("#listePieceJointe-no").hide();
			}
		});
	}

</script>