{
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "phpstan/extension-installer": "^1.3",
        "rector/rector": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.22",
        "povils/phpmnd": "^3.2",
        "tomasvotruba/class-leak": "^2.0",
        "marcocesarato/php-conventional-changelog": "^1.17",
        "ramsey/conventional-commits": "^1.5"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Utils\\Rector\\": "utils/rector/src"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "ramsey/conventional-commits": {
            "config": {
                "typeCase": "lower",
                "types": ["adaptation", "chore", "docs", "test", "style", "refactor", "tech", "migration"],
                "scopeCase": "kebab",
                "scopes": [
                    "deps",
                    "carto",
                    "dossier",
                    "etablissement",
                    "rapports",
                    "calendrier",
                    "platau",
                    "unitaire",
                    "fonctionnel",
                    "dashboard",
                    "prescriptions",
                    "effectifs-degagements",
                    "pieces-jointes",
                    "formulaires"
                ]
            }
        }
    }
}
