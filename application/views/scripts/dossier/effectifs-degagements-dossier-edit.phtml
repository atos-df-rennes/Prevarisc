                    }
                },
                close: function(event, ui){
                    dialogAlerte.html("");
                    dialogAlerte.dialog("close");
                }
            });
            $.ajax({
                type: "POST",
                url: "/changement/balises",
                data: { "id_etablissement": idEts, "changement": changement },
                success: function(msg){
                    dialogAlerte.html(msg);
                    dialogAlerte.dialog("open");
                },
            });
            return false;
            
        });
